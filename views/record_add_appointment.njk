{% extends "base.njk" %}
{% block titulo %}PhysioCare | Add appointment{% endblock %}
{% block contenido %}
    <div class="container mt-5">
        <div class="card shadow-lg p-4" style="background-color: #f7f1f9;">
            <h1 class="text-center mb-4" style="color: #6c757d;">Add appointment</h1>
            <form action="/records/{{ id }}/appointments" method="post">
                {% if error %}
                    <div class="alert alert-danger" role="alert" style="background-color: #f8d7da; border-color: #f5c6cb;">
                        <p class="text-danger">{{ error.general }}</p>
                    </div>
                {% endif %}

                <div class="form-group">
                    <label for="date" class="text-muted" style="color: #6c757d;">Date:</label>
                    <input type="date" class="form-control rounded-pill shadow-sm" name="date" id="date" value="{{ data.date }}">
                    {% if error.date %}
                        <div class="mt-2" role="alert">
                            <p class="text-danger">{{ error.date }}</p>
                        </div>
                    {% endif %}
                </div>

                <div class="form-group">
                    <label for="physio" class="text-muted" style="color: #6c757d;">Physio:</label>
                    <input type="text" class="form-control rounded-pill shadow-sm" name="physio" id="physio" value="{{ data.physio }}">
                    {% if error.physio %}
                        <div class="mt-2" role="alert">
                            <p class="text-danger">{{ error.physio }}</p>
                        </div>
                    {% endif %}
                </div>

                <div class="form-group">
                    <label for="diagnosis" class="text-muted" style="color: #6c757d;">Diagnosis:</label>
                    <input type="text" class="form-control rounded-pill shadow-sm" name="diagnosis" id="diagnosis" value="{{ data.diagnosis }}">
                    {% if error.diagnosis %}
                        <div class="mt-2" role="alert">
                            <p class="text-danger">{{ error.diagnosis }}</p>
                        </div>
                    {% endif %}
                </div>

                <div class="form-group">
                    <label for="treatment" class="text-muted" style="color: #6c757d;">Treatment:</label>
                    <textarea class="form-control rounded-pill shadow-sm" name="treatment" id="treatment" value="{{ data.treatment }}">
                    </textarea>
                    {% if error.treatment %}
                        <div class="mt-2" role="alert">
                            <p class="text-danger">{{ error.treatment }}</p>
                        </div>
                    {% endif %}
                </div>

                <div class="form-group">
                    <label for="observations" class="text-muted" style="color: #6c757d;">Observations:</label>
                    <textarea class="form-control rounded-pill shadow-sm" name="observations" id="observations" value="{{ data.observations }}">
                    </textarea>
                    {% if error.observations %}
                        <div class="mt-2" role="alert">
                            <p class="text-danger">{{ error.observations }}</p>
                        </div>
                    {% endif %}
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100 mt-4 rounded-pill shadow-sm" style="background-color: #b3d0f2; border: none;">
                    Add appointment
                </button>
            </form>
        </div>
    </div>
{% endblock %}