{% extends "base.njk" %}
{% block titulo %}PhysioCare | New record{% endblock %}
{% block contenido %}
    <div class="container mt-5">
        <div class="card shadow-lg p-4" style="background-color: #f7f1f9;">
            <h1 class="text-center mb-4" style="color: #6c757d;">New record</h1>
            <form action="/records" method="post">
                {% if error %}
                    <div class="alert alert-danger" role="alert" style="background-color: #f8d7da; border-color: #f5c6cb;">
                        <p class="text-danger">{{ error.general }}</p>
                    </div>
                {% endif %}

                <div class="form-group">
                    <label for="patient" class="text-muted" style="color: #6c757d;">Patient:</label>
                    <input type="text" class="form-control rounded-pill shadow-sm" name="patient" id="patient" value="{{ data.patient }}">
                    {% if error.patient %}
                        <div class="mt-2" role="alert">
                            <p class="text-danger">{{ error.patient }}</p>
                        </div>
                    {% endif %}
                </div>

                <div class="form-group">
                    <label for="medicalRecord" class="text-muted" style="color: #6c757d;">Medical record:</label>
                    <textarea class="form-control rounded-pill shadow-sm" name="medicalRecord" id="medicalRecord" value="{{ data.medicalRecord }}">
                    </textarea>
                    {% if error.medicalRecord %}
                        <div class="mt-2" role="alert">
                            <p class="text-danger">{{ error.medicalRecord }}</p>
                        </div>
                    {% endif %}
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100 mt-4 rounded-pill shadow-sm" style="background-color: #b3d0f2; border: none;">
                    Add record
                </button>
            </form>
        </div>
    </div>
{% endblock %}